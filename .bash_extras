#!/bin/bash

# make cd .. work like cd ../.., cd ... = cd ../../..
function cd () {
  local -ri n=${#*};
  if [ $n -eq 0 -o -d "${!n}" -o "${!n}" == "-" ]; then
    builtin cd "$@";
  else
    local e="s:\.\.\.:../..:g";
    builtin cd "${@:1:$n-1}" $(sed -e$e -e$e -e$e <<< "${!n}");
  fi
}

function curle () {
    curl $@; echo
}

if [ `uname -s` = "Darwin" ]
then
    alias ll='ls -alFhG'
    alias ls='ls -lFhG'
elif [ `uname -s` = "Linux" ]
then
    alias ls='ls -lhv --group-directories-first --color=auto'
    alias ll='ls -alFh --group-directories-first --color=auto'
fi

alias jsontool='python -m json.tool'
function findp() {
    find . -type f -name "*$@*"
}
function vip() {
    vi `findp "*$@*"`
}

. ~/Library/Python/2.7/bin/ave.sh
